-- -*- mode: lua; -*-

conky.config = {
	out_to_x = false,
	background = false,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	no_buffers = true,
	out_to_console = true,
	out_to_stderr = false,
	extra_newline = false,
	update_interval = 1.0,
	uppercase = false,
	use_spacer = left,
  pad_percents = 2,
  short_units = true,
};

-- Colors are in dzen2 format.
conky.text =
[[
^fg(grey)CPU:^fg(DeepSkyBlue)$cpu% \
^fg(grey)CPU:^fg(DeepSkyBlue)$acpitemp C | \
^fg(grey)RAM:^fg(DeepSkyBlue)$memperc% \
^fg(grey)Swap:^fg(DeepSkyBlue)$swap \
^fg(grey)↓^fg(DeepSkyBlue)${eval $${downspeedf ${gw_iface}}} \
^fg(grey)↑^fg(DeepSkyBlue)${eval $${upspeedf ${gw_iface}}} \
^fg(grey)♪^fg(DeepSkyBlue)${exec amixer get Master -M | grep -oE "[0-9]*%"} \
${if_match $battery_percent != 0}^fg(grey)⚡^fg(DeepSkyBlue)${if_match ${battery_percent} <= 5}^fg(Red)${endif}${battery_short}:${battery_time} ${endif} | \
^fg(grey)/ ^fg(DeepSkyBlue)${fs_used /}^fg(grey)/^fg(DeepSkyBlue)${fs_free /} | ^fg(DeepSkyBlue)${diskio sda} \
^fg(grey)/data ^fg(DeepSkyBlue)${fs_used /data}^fg(grey)/^fg(DeepSkyBlue)${fs_free /data} | ^fg(DeepSkyBlue)${diskio sdb} \
^fg(grey)${time %a %d %b %R} ]]

