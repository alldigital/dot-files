# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
	status_command i3blocks -c ~/.i3blocks.conf
    tray_output LVDS-1

    	colors {
#		colorclass			border		background	text
		separator			$base03
		background			$base01
		statusline			$base05

		focused_workspace	$base0C		$base0C		$base07
		active_workspace	$base02		$base02		$base07
		inactive_workspace	$base01		$base01		$base05
		urgent_workspace	$base0F		$base0F		$base07
	}

    font pango:PragmataPro for Powerline Bold 10
}
